{
  "name": "ds-wagtail",
  "description": "## Local development",
  "private": true,
  "scripts": {
    "compile:css": "sass --quiet-deps --load-path=node_modules sass/etna.scss:templates/static/css/dist/etna.css",
    "compile:js": "webpack --config webpack.config.js --mode=production",
    "compile": "npm run compile:css && npm run compile:js",
    "dev:css": "sass --load-path=node_modules --watch sass/etna.scss:templates/static/css/dist/etna.css",
    "dev:js": "webpack --config webpack.config.js --mode=development --watch",
    "dev": "npm run dev:css & npm run dev:js",
    "test": "jest --coverage",
    "lint": "prettier --check '{scripts,sass}/**/*.{scss,js}' && stylelint 'sass/**/*.scss' && eslint 'scripts/**/*.js'",
    "lint:fix": "prettier --write '{scripts,sass}/**/*.{scss,js}' && stylelint --fix 'sass/**/*.scss' && eslint --fix 'scripts/**/*.js'",
    "copy": "npm run copy-uv-dist-umd && npm run copy-uv-html && npm run copy-uv-css && npm run create-tify && npm run copy-tify",
    "copy-uv-dist-umd": "cp -R node_modules/universalviewer/dist/umd 'templates/static/uv'",
    "copy-uv-html": "cp -R node_modules/universalviewer/dist/uv.html 'templates/static/uv'",
    "copy-uv-css": "cp -R node_modules/universalviewer/dist/uv.css 'templates/static/uv'",
    "create-tify": "mkdir 'templates/static/tify'",
    "copy-tify": "npm run copy-tify-js && npm run copy-tify-css",
    "copy-tify-js": "cp -R node_modules/tify/dist/tify.js 'templates/static/tify'",
    "copy-tify-css": "cp -R node_modules/tify/dist/tify.css 'templates/static/tify'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nationalarchives/ds-wagtail.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nationalarchives/ds-wagtail/issues"
  },
  "homepage": "https://github.com/nationalarchives/ds-wagtail#readme",
  "devDependencies": {
    "@babel/core": "~7.23",
    "@babel/preset-env": "~7.23",
    "@babel/preset-react": "^7.23.3",
    "babel-loader": "~9.1",
    "css-loader": "^6.8.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "jest": "~29.7",
    "jest-environment-jsdom": "~29.7",
    "prettier": "~3.1",
    "sass": "~1.69",
    "sass-loader": "^13.3.3",
    "style-loader": "^3.3.3",
    "stylelint": "^15.10.3",
    "stylelint-config-standard-scss": "^11.0.0",
    "stylelint-selector-bem-pattern": "^3.0.1",
    "webpack": "~5.89",
    "webpack-cli": "~5.1"
  },
  "dependencies": {
    "@nationalarchives/frontend": "^0.1.23-prerelease",
    "@samvera/clover-iiif": "^2.2.6",
    "jquery": "~3.7",
    "openseadragon": "~4.1",
    "react": "^18.2.0",
    "tify": "^0.29.2",
    "universalviewer": "^4.0.25"
  },
  "jest": {
    "testEnvironment": "jest-environment-jsdom"
  }
}
